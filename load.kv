MDScreen:
    name: "load"
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1

        Image:
            source: "dancing.jpg"
            size_hint: 1, 5
            pos_hint: {"center_y": .75, "center_x": .5}

        MDLabel:
            text: "Buying Tickets Made Easy"
            pos_hint: {"center_y": .4, "center_x": .5}
            halign: "center"
            font_name: "FARRAY.otf"
            font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 1, 0, 0, 1

        
        Button:
            text: "CREATE A NEW ACCOUNT"
            background_color: 0, 0, 0, 0
            font_name: "ARLRDBD.TTF"
            size_hint: .75, .06
            pos_hint: {"center_x": .5, "center_y": .15}
            canvas.before:
                Color:
                    rgb: 1, 0, 0, 1
                RoundedRectangle
                    size: self.size
                    pos: self.pos
                    radius: [5]

            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"

        
        MDRectangleFlatIconButton:
            text: 'LOGIN TO YOUR ACCOUNT'
            size_hint: .75, .06
            pos_hint: {"center_x": .5, "center_y": .25}
            theme_text_color: "Custom"  # Set the text color to a custom value
            text_color: 1, 0, 0, 1
            line_color: 1, 0, 0, 1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"


        MDLabel:
            text: "@Cystiene Software"
            pos_hint: {"center_y": .04, "center_x": .5}
            halign: "center"
            font_name: "FARRAY.otf"
            font_size: "8sp"
            theme_text_color: "Custom"
            text_color: 1, 0, 0, 1


        








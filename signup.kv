MDScreen:
    name: "signup"
    MDFloatLayout:
        md_bg_color: 0, 0, 0, 1

        MDLabel:
            text: "Ticketfy"
            font_name: "ARLRDBD.TTF"
            font_size: "30sp"
            color: 1, 1, 1, 1
            pos_hint: {"center_x": .53, "center_y": .90}


MDScreen:
    name: "eventhome"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDFloatLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(250)
            md_bg_color: 1, 1, 1, 1
            pos_hint: {"center_x": .5, "center_y": .75}


            MDCard:
                radius: [10]
                size_hint_x: 0.9  
                pos_hint: {"center_x": .5, "center_y": .5}
                md_bg_color: 0.9, 0.9, 0.9, 1

                FitImage:
                    source: "IMG-20240103-WA0033.jpg"
                    size_hint_y: 1
                    pos_hint: {"top": 1}
                    radius: 10, 10, 10, 10

        MDIconButton:
            icon: "chevron-left"
            theme_icon_color: "Custom"
            icon_color: 0, 0, 0, 1
            pos_hint: {"center_y": .95, "center_x": .1}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "home"

        MDLabel:
            text: "TITLE:"
            font_name: "FARRAY.otf"

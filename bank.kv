MDScreen:
    name: "bank"

    MDFloatLayout:
        orientation: 'vertical'
        md_bg_color: 0.88, 0.1, 0.05, 1
        size_hint_y: None 
        height: dp(70)
        pos_hint: {'top': 1}
        MDLabel:
            text: "Bank Settings"
            font_name: "ARLRDBD.TTF"
            font_size: "17sp"
            color: 1, 1, 1, 1
            size_hint_x: .7
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .5}
        MDIconButton:
            icon: "chevron-left"
            theme_icon_color: "Custom"
            icon_color: 1, 1, 1, 1
            pos_hint: {"center_y": .5, "center_x": .1}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "home"

    MDFloatLayout:
        size_hint: .95, .5
        pos_hint: {"center_x": .5, "center_y": .55}
        md_bg_color: 0.8, 0.8, 0.8, .5
        radius: [20]
        MDLabel:
            text: "Bank Details"
            font_name: "ARLRDBD.TTF"
            font_size: "20sp"
            color: 0, 0, 0, 1
            size_hint_x: .7
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .9}
        MDLabel:
            text: "Note: Submition of Unknown or mini banks will delay withdrawal "
            font_name: "ARLRDBD.TTF"
            font_size: "10sp"
            color: 0, 0, 0, 1
            size_hint_x: .7
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .8}

        MDFloatLayout:
            size_hint: .89, .12
            pos_hint: {"center_x": .5, "center_y": .6}

            TextInput:
                hint_text: "Bank Name"
                size_hint_y: 1
                font_name: "ARLRDBD.TTF"
                pos_hint: {"center_x": .49, "center_y": .4}
                background_color: 0, 0, 0, 0
                cursor_color: 1, 0, 0, 1
                cusor_width: "2sp"
                foreground_color: 1, 0, 0, 1
                font_size: "17sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 1, 0, 0, 1
                

        MDFloatLayout:
            size_hint: .89, .12
            pos_hint: {"center_x": .5, "center_y": .35}

            TextInput:
                hint_text: "Account Number"
                size_hint_y: 1
                font_name: "ARLRDBD.TTF"
                pos_hint: {"center_x": .49, "center_y": .4}
                background_color: 0, 0, 0, 0
                cursor_color: 1, 0, 0, 1
                cusor_width: "2sp"
                foreground_color: 1, 0, 0, 1
                font_size: "17sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 1, 0, 0, 1
            

        Button:
            text: "Save Changes"
            color: 1, 0, 0, 1
            background_color: 0, 0, 0, 0
            font_name: "ARLRDBD.TTF"
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .1}

       

    MDFloatLayout:
        size_hint: .95, .1
        pos_hint: {"center_x": .5, "center_y": .15}
        md_bg_color: 0.8, 0.8, 0.8, .5
        radius: [20]

        Button:
            text: "change pin"
            color: 1, 0, 0, 1
            background_color: 0, 0, 0, 0
            font_name: "FARRAY.otf"
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .5}
            
            

        